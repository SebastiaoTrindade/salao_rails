<div class="login-hero">
    <div class="login-overlay" data-aos="fade-up">
        <div class="text-center mb-4">
            <%= image_tag 'logo.png', alt: 'Logo', class: 'login-logo' %>
        </div>
        <div class="login-form-wrapper">   
            <%= form_with url: login_path, scope: nil, local: true, class: 'login-form' do |form| %>
                <%= render 'sessions/form_group', icon: 'fas fa-envelope', field: form.email_field(:email, class: 'form-control', placeholder: 'Email', required: true) %>

               <%= render 'sessions/form_group', icon: 'fas fa-lock', field: form.password_field(:password, class: 'form-control text-black', placeholder: 'Senha', required: true) %>

                <div class="d-grid mt-4">
                    <%= form.submit 'Entrar', class: 'btn btn-primary w-100' %>
                </div>                
            <% end %>

            <div class="text-center mt-3">
                <%= link_to "Esqueci minha senha", new_password_reset_path, class: "text-white text-decoration-underline" %>
            </div>

            <div class="text-center mt-3">
                <%= link_to "Ainda nÃ£o tem conta? Cadastre-se", new_user_path, class: "text-white" %>
            </div>
        </div>
    </div>
</div>
 