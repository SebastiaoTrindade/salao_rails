<!--Services Section-->
<section id="services" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Nossos Serviços</h2>
        <div class="row justify-content-center g-4">
            <!--Corte cabelo-->
            <div class="col-md-4 col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="card h-100 border-0 shadow-sm text-center p-4 hover-effect">
                    <i class="fas fa-cut fa-2x text-secondary mb-3"></i>
                    <h5 class="fw-bold">Cortes femininos</h5>
                    <p class="small text-muted">Cortes modernos e personalizados, para valorizar ainda mais o seu
                        estilo.</p>
                    <img src="<%= image_path('corte.webp') %>" alt="Corte Feminino" class="img-fluid mb-2"
                        style="width: 350px; height: 250px;">
                </div>
            </div>
            <!--Escova-->
            <div class="col-md-4 col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="card h-100 border-0 shadow-sm text-center p-4 hover-effect">
                    <i class="fas fa-spa fa-2x text-info mb-3"></i>
                    <h5 class="fw-bold">Escova e Hidratação</h5>
                    <p class="small text-muted">Tratamento intenso que recupera a saúde dos fios, reduz o frizz e o
                        ressecamento.</p>
                    <img src="<%= image_path('escova.jpeg') %>" alt="Escova Feminina" class="img-fluid mb-2"
                        style="width: 350px; height: 250px;">
                </div>
            </div>
            <!--Manicure-->
            <div class="col-md-4 col-lg-4" data-aos="fade-up" data-aos-delay="300">
                <div class="card h-100 border-0 shadow-sm text-center p-4 hover-effect">
                    <i class="fas fa-hand-sparkles fs-1 text-danger mb-3"></i>
                    <h5 class="fw-bold">Manicure e pedicure</h5>
                    <p class="small text-muted">Beleza das mãos e pés, limpeza profunda, prevenção de infecções e
                        estresse</p>
                    <img src="<%= image_path('manicure.jpg') %>" alt="Manicure e Pedicure" class="img-fluid mb-2"
                        style="width: 350px; height: 250px;">
                </div>
            </div>
        </div>
    </div>
</section>

