<div class="d-flex" id="wrapper">
    <!--Sidebar-->    
    <nav id="sidebar-wrapper" class="bg-dark border-end" >
        <div class="sidebar-heading text-white py-4 px-3">
            <div class="text-center mb-1">
                <%= image_tag 'logo.png', alt: 'Logo', class: 'dashboard-logo me-2' %> 
                <h5 class="text-white fw-bold">Salão Beleza Pura</h5>
            </div>               
        </div>
        <div class="list-group list-group-flush">
            <%= link_to dashboard_path, class: 'list-group-item list-group-item-action bg-dark text-white sidebar-link' do %> 
                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
            <% end %>

            <%= link_to users_path, class: 'list-group-item list-group-item-action bg-dark text-white sidebar-link' do %>
                <i class="fas fa-users me-2"></i> Usuários
            <% end %>

            <%= link_to logout_path, method: :delete, class: 'list-group-item list-group-item-action bg-dark text-white sidebar-link' do %>
                <i class="fas fa-sign-out-alt me-2"></i> Logout
            <% end %>
        </div>
    </nav>

    <!--Page Content-->
   
    <div id="page-content-wrapper" class="w-100">
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom shadow-sm px-4">
             <button class="btn btn-outline-dark me-3 d-lg-none" id="menu-toggle">
                <i class="fas fa-bars"></i>
            </button>
            <span class="navbar-brand mb-0 h1">Dashboard</span>
            <div class="ms-auto">
                <span class="me-3 text-muted">Bem Vindo, <strong><%= current_user.name %></strong></span>                
            </div>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">            
            <%= form_with url: dashboard_path, method: :get, local: true, class: 'd-flex' do %>
                <%= date_field_tag :start_date, params[:start_date], class: 'form-control me-2', placeholder: 'Data Inicial' %>
                <%= date_field_tag :end_date, params[:end_date], class: 'form-control me-2', placeholder: 'Data Final' %>
                <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
            <% end %>
        </div>

        <div class="container-fluid py-4 px-4">            
            <div class="row g-4">
                <div class="col-md-6 col-xl-3">
                   <div class="card text-white bg-primary shadow rounded-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-users"></i> Usuários</h5>
                            <p class="card-text fs-4"><%= User.count %></p>     
                            
                        </div>  
                   </div>
                </div>
                
                <div class="col-md-6 col-xl-3">
                   <div class="card text-white bg-success shadow rounded-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-calendar-check me-2"></i>Agendamentos</h5>
                            <p class="card-text fs-4">0</p>     
                            
                        </div>  
                   </div>
                </div>

                <div class="col-md-6 col-xl-3">
                   <div class="card text-white bg-warning shadow rounded-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-shopping-cart me-2"></i>Vendas</h5>
                            <p class="card-text fs-4">0</p>     
                            
                        </div>  
                   </div>
                </div>

                <div class="col-md-6 col-xl-3">
                   <div class="card text-white bg-info shadow rounded-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-comments me-2"></i>Mensagens</h5>
                            <p class="card-text fs-4">0</p>   
                            
                        </div>  
                   </div>
                </div>
            </div>
        </div>

        <!-- Gráficos-->
        <div class="mt-5">
            <h4 class="mb-3">Agendamentos por dia</h4>
            <%= line_chart @appointments_by_day, height: '300px', library: {backgroundColor: 'transparent'} %>
        </div>
    </div>   
</div>

 