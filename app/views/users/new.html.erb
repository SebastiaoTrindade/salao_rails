<div class="register-hero">
    <div class="register-overlay" data-aos="fade-up">
        <div class="text-center mb-4">
            <%= image_tag 'logo.png', alt: 'Logo', class: 'register-logo' %>
        </div>
        <div class="register-form-wrapper">
            <h2 class="text-center mb-4 text-white">Crie sua conta</h2>

            <%= form_with model: @user, url: users_path, local: true, class: 'register-form' do |form| %>
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-user text-black"></i>
                    </span>                    
                    <%= form.text_field :name, class: 'form-control', placeholder: 'Digite seu nome completo', required: true %>
                </div>  
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-envelope text-black"></i>
                    </span>                    
                    <%= form.email_field :email, class: 'form-control', placeholder: 'Digite seu e-mail', required: true %>
                </div>  
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-lock text-black"></i>
                    </span>                    
                    <%= form.password_field :password, class: 'form-control', placeholder: 'Digite sua senha', required: true %>
                </div>  
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <i class="fas fa-lock text-black"></i>
                    </span>                    
                    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirme sua senha', required: true %>
                </div>  
                <div class="d-grid">
                    <%= form.submit 'Cadastrar', class: 'btn btn-success w-100 register-button' %>
                </div>
            <% end %>
            <div class="text-center mt-3">
                <%= link_to "JÃ¡ tem conta? Fazer login", login_path, class: "text-white" %>
            </div>
        </div>
    </div>
</div>
