<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Gerenciamento de Usuários</h2>
    </div>    

    <div class="card shadow-sm">
       <div class="card-header bg-primary text-white">
            Lista de Usuários
       </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>Email</th>
                    <th class="text-center">Admin?</th>
                    <th class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td class="text-center">
                        <% if user.admin? %>
                            <span class="badge bg-success">Sim</span>
                        <% else >
                            <span class="badge bg-secondary">Não</span>
                        <% end >
                    </td>
                    <td class="text-end">
                        <%= link_to 'Editar', edit_user_path(user), class: "btn btn-sm btn-outline-warning me-1", data: {bs_toggle: "tooltip"} %>
                        <%= link_to 'Excluir', user_path(user), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-danger" %>
                        <% unless user.admin? %>
                        <%= link_to 'Tornar Admin', make_admin_user_path(user), method: :patch, class: "btn btn-sm btn-secondary" %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
            </tbody>   
        </table>           
    </div>
  </div>
</div>
    