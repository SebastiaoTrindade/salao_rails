<div class="container-fluid mt-4">
    <h2 class="mb-4">Usuários Cadastrados</h2>  

    <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= flash[:notice] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% end %>

    <div class="table-responsive shadow rounded">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>                    
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Admin</th>
                    <th class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>                        
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <% if user.admin? %>
                                <span class="badge bg-success">Sim</span>
                            <% else %>
                                <span class="badge bg-secondary">Não</span>
                            <% end %>
                        </td>
                        <td class="text-center">
                            <%= link_to edit_user_path(user), class: 'btn btn-primary btn-sm me-1' do %>
                                <i class="fas fa-edit"></i>
                            <% end %>
                            <%= link_to user_path(user), method: :delete, data: { confirm: 'Deseja realmente excluir este usuário?' }, class: 'btn btn-danger btn-sm me-1' do %>
                                <i class="fas fa-trash-alt"></i>
                            <% end %>

                            <% unless current_user == user %>
                                <%= link_to make_admin_user_path(user), method: :patch, class: 'btn btn-success btn-sm' do %>
                                    <i class="fas fa-user-shield"></i>
                                    <% if user.admin? %>                                    
                                        <i class="fas fa-user-slash"></i>
                                    <% else %>
                                        <i class="fas fa-user-shield"></i>
                                    <% end %>                                
                                <% end %>                                
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>  
    </div>
</div>

     